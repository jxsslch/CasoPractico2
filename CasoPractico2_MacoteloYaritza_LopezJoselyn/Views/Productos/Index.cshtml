@model IEnumerable<CasoPractico2_MacoteloYaritza_LopezJoselyn.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCategoriaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreMarcaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoriaNavigation.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMarcaNavigation.NombreMarca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NombreProducto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NombreProducto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NombreProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
