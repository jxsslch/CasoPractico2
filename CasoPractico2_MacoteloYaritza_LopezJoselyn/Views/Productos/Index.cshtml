@model IEnumerable<CasoPractico2_MacoteloYaritza_LopezJoselyn.Models.Producto>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de productos</h1>

@if (SignInManager.IsSignedIn(User))
    {
<p>
    <a class="btn btn-primary" asp-action="Create">+ Agregar producto</a>
</p>
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCategoriaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreMarcaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoriaNavigation.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMarcaNavigation.NombreMarca)
            </td>
                @if (SignInManager.IsSignedIn(User))
                {
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.NombreProducto">Editar</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.NombreProducto">Datos</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.NombreProducto">Eliminar</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
