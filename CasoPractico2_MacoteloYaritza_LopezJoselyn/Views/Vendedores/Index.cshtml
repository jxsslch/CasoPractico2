@model IEnumerable<CasoPractico2_MacoteloYaritza_LopezJoselyn.Models.Vendedore>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de vendedores</h1>
@if (SignInManager.IsSignedIn(User))
    {
<p>
    <a class="btn btn-primary" asp-action="Create">+ Agregar vendedor</a>
</p>
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreVendedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreVendedor)
                </td>
                @if (SignInManager.IsSignedIn(User))
                {
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.NombreVendedor">Editar</a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.NombreVendedor">Datos</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.NombreVendedor">Eliminar</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
